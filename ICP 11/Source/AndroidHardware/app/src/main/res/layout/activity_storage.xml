<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72E477"
    tools:context="com.example.vijaya.androidhardware.StorageActivity">

    <EditText
        android:id="@+id/id_txt_mycontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="-7dp"
        android:layout_marginRight="-7dp"
        android:ems="10"
        android:gravity="start"
        android:hint="Enter Data to Save"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <Button
        android:id="@+id/id_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_txt_mycontent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:onClick="saveTofile"
        android:text="save" />

    <Button
        android:id="@+id/id_btn_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_btn_save"
        android:layout_alignStart="@+id/id_btn_save"
        android:layout_alignLeft="@+id/id_btn_save"
        android:layout_marginStart="119dp"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="-49dp"
        android:onClick="retrieveFromFile"
        android:text="open" />

    <EditText
        android:id="@+id/id_txt_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_btn_display"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="invisible" />
</RelativeLayout>
